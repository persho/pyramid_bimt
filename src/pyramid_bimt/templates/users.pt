<metal:block use-macro="main_template">

  <div metal:fill-slot="content" id="content">

    <h1>Users (${count})</h1>
    <table class="table table-striped table-hover datatable" data-ajax="true">
      <thead>
        <tr>
          <th>ID</th>
          <th>Full Name</th>
          <th>Email</th>
          <th data-sort-disabled="true">Groups</th>
          <th>Created</th>
          <th>Modified</th>
          <th data-sort-disabled="true">Enable/Disable</th>
          <th data-sort-disabled="true">
            <a class="btn btn-xs btn-success" href="${request.route_path('user_add')}">
              <span class="glyphicon glyphicon-plus-sign"></span> Add
            </a>
          </th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>

</metal:block>
