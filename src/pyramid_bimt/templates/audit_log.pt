<metal:block use-macro="main_template">

  <div metal:fill-slot="content" id="content">

    <h1>Audit Log</h1>
    <table class="table table-striped table-hover datatable" data-sort-descending="True">
      <thead>
        <tr>
          <th>Timestamp</th>
          <th>Event Type</th>
          <th>User</th>
          <th>Comment</th>
          <th data-sort-disabled="true">
            <a class="btn btn-xs btn-success" href="${request.route_url('audit_log_add')}">
              <span class="glyphicon glyphicon-plus-sign"></span> Add
            </a>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="entry entries">
          <td>${entry.timestamp.strftime('%Y/%m/%d %H:%M:%S')}</td>
          <td>
              <span data-toggle="tooltip" data-placement="bottom" title="${entry.event_type.description}">
               ${entry.event_type.title}
              </span>
          </td>
          <td><a href="${request.route_url('user', user_id=entry.user.id)}">${entry.user.email}</a></td>
          <td>${entry.comment}</td>
          <td>
            <a class="btn btn-xs btn-danger" href="${request.route_url('audit_log_delete', entry_id=entry.id)}">
              <span class="glyphicon glyphicon-remove-sign"></span> Delete
            </a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

</metal:block>
